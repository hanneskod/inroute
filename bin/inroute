#!/usr/bin/env php
<?php

namespace inroute\Console;

use Symfony\Component\Console\Application;

$files = array(
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php'
);

$found = false;

foreach ($files as $file) {
    if (file_exists($file)) {
        require $file;
        $found = true;
        break;
    }
}

if (!$found) {
    die('Autoloader not found.');
}

$app = new Application('Inroute');
$app->add(new BuildCommand());
$app->add(new DocumentCommand());
$app->run();
